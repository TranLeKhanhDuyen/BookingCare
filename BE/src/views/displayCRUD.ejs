<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #dddddd;
  }

  .btn-edit {
    background-color: rgb(221, 151, 20);
    border-radius: 6px;
    padding: 10px;
    display: inline-block;
    text-decoration: none;
  }

  .btn-delete {
    background-color: red;
    border-radius: 6px;
    padding: 10px;
    display: inline-block;
    text-decoration: none;

  }
</style>

<body>
  <h1>Account</h1>
  <table>
    <tr>
      <th>Email</th>
      <th>FistName</th>
      <th>LastName</th>
      <th>Address</th>
      <th>Action</th>
    </tr>
    <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td>
          <%= dataTable[i].email %>
        </td>
        <td>
          <%= dataTable[i].firstName %>
        </td>
        <td>
          <%= dataTable[i].lastName %>
        </td>
        <td>
          <%= dataTable[i].address %>
        </td>
        <td>
          <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit">Edit</a>
          <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-delete">Delete</a>
        </td>
      </tr>
      <% } %>
  </table>
</body>

</html>
